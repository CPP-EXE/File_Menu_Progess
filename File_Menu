#include <iostream>
#include <iomanip>
#include <cstdlib>
#include <windows.h>            //COPYRIGHT 2015 ALL RIGHTS RESERVED
#include <fstream>
#include <string>
#include <sstream>

using namespace std;

int main()
{

    cout << "\n\n";
    cout << setw(58)
    << "===================================================Menu=========================================================" <<
    setw(95) << "\n\n"
    << setw(60) << "(1) Write File\n"
    << setw(59) << "(2) Read File\n"
    << setw(61) << "(3) Exit System\n";

    string DataIn = "";
    int Choice = 0;
    while(true)
    {
    cout << "\n\n\n";
    cout << "Enter Option To Execute Command: ";
    getline(cin, DataIn);
    stringstream DataStream(DataIn);
    if(DataStream >> Choice)
        break;
    cout << "Invalid Syntax ";

    }


    int ProgressBar = 0;

    switch(Choice)
     {
        case 1:
            {
        cout << "Loading";
            for(ProgressBar = 0; ProgressBar < 21; ProgressBar++)
            {
                Sleep(240);
                cout << "." << flush;
            }
            Sleep(4000);
            system("CLS");

            cout << "\n";
            cout << "================================================================================================================\n";
            cout << "\n";
            string InFile;
            cout << setw(60) <<  "Write File\n\n\n\n";
            cout << "\n\n";
            getline(cin, InFile);
            ofstream ReadFromFile;
            ReadFromFile.open("FileData.txt");
            if(!ReadFromFile)
            {
                cerr << "Error Cannot Write To File Please Restart Program" << endl;
            }

            ReadFromFile << InFile << endl;
            ReadFromFile.close();

            break;
            }

       case 2:
           {
            cout << "Loading";
            for(ProgressBar = 0; ProgressBar < 21; ProgressBar++)
            {
                Sleep(240);
                cout << "." << flush;
            }
            Sleep(4000);
            system("CLS");

            cout << "\n";
            cout << "================================================================================================================\n";
            cout << "\n";
            cout << setw(60) << "Read File\n\n\n\n";
            ifstream ReadFromFile;
            ReadFromFile.open("FileData.txt");

            if(!ReadFromFile)
            {
                cerr << "Error Cannot Read File Please Restart The Program" << endl;
                exit(1);
            }

            while(ReadFromFile) {
                string InData;
                ReadFromFile >> InData;
                cout << InData << endl;
            }
            break;
           }
        case 3:
            {
            cout << "\n\n\n\n\n\n\n\n";
            return 0;
            break;
            }
     }
    cout << "\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n";
    cout << "================================================================================================================\n";




    return 0;
}




